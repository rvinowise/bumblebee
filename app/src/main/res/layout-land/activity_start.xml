<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/lab_hello"
        android:layout_width="match_parent"
        android:layout_weight="0"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:textAlignment="center"
        android:layout_gravity="center"
        />

    <!-- game start settings -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center"
        >


        <TextView
            android:id="@+id/lab_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="9999"
            android:textSize="35sp"
            android:textAlignment="center"
            android:layout_gravity="top"

            />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/btn_sign_in"
            android:text="@string/sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onSignInButtonClicked"/>

        <Button
            android:id="@+id/btn_start_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_start_game"
            android:onClick="on_btn_start_game_click"
            />


        <Button
            android:id="@+id/btn_show_leaderboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_show_leaderboard"
            android:onClick="onShowLeaderboardsRequested"
            />

        <Button
            android:id="@+id/btn_sign_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_out"
            android:onClick="onSignOutButtonClicked"
            />
    </LinearLayout>




</LinearLayout>